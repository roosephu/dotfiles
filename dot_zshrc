md2pdf () {
   prefix="${1%.*}"
   cp $prefix.md /tmp
   pushd /tmp
   pandoc $1 -o $prefix.tex --lua-filter ~/.pandoc/md.lua -s
   pdflatex -shell-escape $prefix.tex
   popd
   cp /tmp/$prefix.pdf .
}

